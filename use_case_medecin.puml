@startuml Diagramme de cas d utilisation côté Médecin

skinparam shadowing false
skinparam actorStyle awesome

actor Medecin as "Médecin"

rectangle "Diagramme de cas d utilisation côté Médecin" {
    circle "Use Case" as CentralUC
    
    rectangle "Gestion Authentification" {
        usecase "Connexion accounts : <<extend>>
        UC_Logout <.. CentralUC : <<extend>>
        Medecin --> UC_Login
        Medecin --> UC_Logout
    }
    
    rectangle "Gestion des Patients" {
        usecase "Gestion des patients" as UC_PatientMgmt
        usecase "Créer un patient" as UC_CreatePatient
        usecase "Modifier un patient" as UC_ModifyPatient
        usecase "Visualiser un patient" as UC_ViewPatient
        usecase "Rechercher un patient" as UC_SearchPatient
        UC_PatientMgmt <.. UC_Login : <<include>>
        UC_PatientMgmt <.. CentralUC : <<extend>>
        UC_PatientMgmt <.. UC_CreatePatient : <<extend>>
        UC_PatientMgmt <.. UC_ModifyPatient : <<extend>>
        UC_PatientMgmt <.. UC_ViewPatient : <<extend>>
        UC_PatientMgmt <.. UC_SearchPatient : <<extend>>
        Medecin --> UC_PatientMgmt
    }
    
    rectangle "Gestion des Documents" {
        usecase "Gestion des documents" as UC_DocMgmt
        usecase "Créer un document" as UC_CreateDoc
        usecase "Numériser un document" as UC_ScanDoc
        usecase "Modifier un document" as UC_ModifyDoc
        usecase "Visualiser un document" as UC_ViewDoc
        usecase "Classifier un document" as UC_ClassifyDoc
        usecase "Traiter avec IA" as UC_TreatDocIA
        UC_DocMgmt <.. CentralUC : <<extend>>
        UC_DocMgmt <.. UC_Login : <<include>>
        UC_DocMgmt <.. UC_CreateDoc : <<extend>>
        UC_DocMgmt <.. UC_ScanDoc : <<extend>>
        UC_CreateDoc <.. UC_ScanDoc : <<include>>
        UC_CreateDoc <.. UC_TreatDocIA : <<include>>
        UC_DocMgmt <.. UC_ModifyDoc : <<extend>>
        UC_DocMgmt <.. UC_ViewDoc : <<extend>>
        UC_DocMgmt <.. UC_ClassifyDoc : <<extend>>
        Medecin --> UC_DocMgmt
    }
    
    rectangle "Gestion des Rapports Médicaux" {
        usecase "Gestion des rapports" as UC_ReportMgmt
        usecase "Créer un rapport" as UC_CreateReport
        usecase "Modifier un rapport" as UC_ModifyReport
        usecase "Visualiser un rapport" as UC_ViewReport
        usecase "Soumettre pour révision" as UC_SubmitReport
        usecase "Valider un rapport" as UC_ValidateReport
        usecase "Générer insights IA" as UC_GenerateInsights
        usecase "Exporter un rapport" as UC_ExportReport
        UC_ReportMgmt <.. CentralUC : <<extend>>
        UC_ReportMgmt <.. UC_CreateReport : <<extend>>
        UC_ReportMgmt <.. UC_ModifyReport : <<extend>>
        UC_ReportMgmt <.. UC_ViewReport : <<extend>>
        UC_ReportMgmt <.. UC_SubmitReport : <<extend>>
        UC_ReportMgmt <.. UC_ValidateReport : <<extend>>
        UC_ReportMgmt <.. UC_GenerateInsights : <<extend>>
        UC_ReportMgmt <.. UC_ExportReport : <<extend>>
        Medecin --> UC_ReportMgmt
    }
    
    rectangle "Gestion des Tâches" {
        usecase "Gestion des tâches" as UC_TaskMgmt
        usecase "Créer une tâche" as UC_CreateTask encounter
        usecase "Assigner une tâche" as UC_AssignTask
        usecase "Visualiser les tâches" as UC_ViewTasks
        usecase "Marquer comme terminée" as UC_CompleteTask
        usecase "Consulter le planning" as UC_ViewSchedule
        UC_TaskMgmt <.. CentralUC : <<extend>>
        UC_TaskMgmt <.. UC_CreateTask : <<extend>>
        UC_TaskMgmt <.. UC_AssignTask : <<extendSTE
        UC_TaskMgmt <.. UC_ViewTasks : <<extend>>
        UC_TaskMgmt <.. UC_CompleteTask : <<extend>>
        UC_TaskMgmt <.. UC_ViewSchedule : <<extend>>
        Medecin --> UC_TaskMgmt
    }
    
    rectangle "Gestion du Profil" {
        usecase "Gestion du profil" as UC_ProfileMgmt
        usecase "Modifier le profil" as UC_ModifyProfile
        usecase "Visualiser le profil" as UC_ViewProfile
        usecase "Changer le mot de passe" as UC_ChangePassword
        UC_ProfileMgmt <.. CentralUC : <<extend>>
        UC_ProfileMgmt <.. UC_ModifyProfile : <<extend>>
        UC_ProfileMgmt <.. UC_ViewProfile : <<extend>>
        UC_ProfileMgmt <.. UC_ChangePassword : <<extend>>
        Medecin --> UC_ProfileMgmt
    }
    
    rectangle "Outils et Utilitaires" {
        usecase "Outils" as UC_Tools
        usecase "Scanner QR code" as UC_ScanQR
        usecase "Consulter statistiques" as UC_ViewStats
        usecase "Recevoir notifications" as UC_ReceiveNotifications
        UC_Tools <.. CentralUC : <<extend>>
        UC_Tools <.. UC_ScanQR : <<extend>>
        UC_Tools <.. UC_ViewStats : <<extend>>
        UC_Tools <.. UC_ReceiveNotifications : <<extend>>
        Medecin --> UC_Tools
    }
}

note right of Medecin
    Médecin
    - Gestion complète des patients
    - Documents et rapports médicaux
    - Validation médicale
    - TCcFcches et planning
    - Traitement IA des documents
end note

@enduml



